<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.quaap.computationaldemonology.MainActivity"
    android:background="@android:color/background_dark">

    <Button
        android:text="Summon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/button_summon"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark" />

    <Button
        android:text="Expel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_expel"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/button_summon"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark" />

    <Button
        android:text="Cast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_cast"
        android:layout_below="@+id/button_expel"
        android:layout_alignStart="@+id/button_expel"
        android:layout_marginTop="27dp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark" />

    <Button
        android:text="Protect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/button_seek"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/button_cast"
        android:layout_alignStart="@+id/button_cast" />

    <Button
        android:text="Incant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_seek"
        android:layout_alignStart="@+id/button_seek"
        android:layout_marginTop="32dp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/button_cloud" />
</RelativeLayout>
