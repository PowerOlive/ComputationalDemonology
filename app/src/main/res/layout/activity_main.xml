<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.quaap.computationaldemonology.MainActivity"
    android:background="@android:color/background_dark"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ToggleButton
            android:text="@string/page"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/toggleButton"
            android:layout_weight="1"
            android:textOff="@string/go_to_controls"
            android:textOn="@string/back_to_description"
            android:background="@color/colorPrimaryDark"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <ViewFlipper
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/flipper">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:text="@string/cd_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="18sp" />

    </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:columnCount="2"
            android:foregroundGravity="center_vertical">


            <Button
                android:text="@string/protect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_seek"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimaryDark"
                android:layout_gravity="center_horizontal"
                android:layout_columnWeight="1"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin" />

            <Button
                android:text="@string/cast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_cast"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimaryDark"
                android:layout_gravity="center_horizontal"
                android:layout_columnWeight="1"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin" />

            <Button
                android:text="@string/summon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_summon"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimaryDark"
                android:layout_gravity="center_horizontal"
                android:layout_columnWeight="1"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin" />

            <Button
                android:text="@string/ftaghu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/button_worms"
                android:layout_gravity="center_horizontal"
                android:layout_columnWeight="1"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin" />

            <Button
                android:text="@string/expel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_expel"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimaryDark"
                android:layout_gravity="center_horizontal"
                android:layout_columnWeight="1"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin" />

                <Button
                    android:text="@string/incant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_cloud"
                    android:textColor="@android:color/white"
                    android:background="@color/colorPrimaryDark"
                    android:layout_gravity="center_horizontal"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin" />
            </GridLayout>
        </ScrollView>

    </ViewFlipper>
</LinearLayout>
